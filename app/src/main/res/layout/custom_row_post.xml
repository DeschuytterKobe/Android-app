<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#CDCBCB"
    android:fadingEdge="horizontal" 
    android:padding="10dp"
    android:scrollbars="vertical"
    android:shape="rectangle">


    <TextView
        android:id="@+id/postDescription_txt"
        android:layout_width="184dp"
        android:layout_height="31dp"

        android:layout_marginTop="10dp"
        android:text="Feeling good"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postTitle_txt3" />

    <TextView
        android:id="@+id/postDate_txt"
        android:layout_width="94dp"
        android:layout_height="26dp"

        android:layout_marginEnd="87dp"
        android:layout_marginBottom="7dp"
        android:text="Date"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/postTitle_txt"
        app:layout_constraintEnd_toStartOf="@+id/postLikeButton" />

    <TextView
        android:id="@+id/postTitle_txt"
        android:layout_width="100dp"
        android:layout_height="25dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="5dp"
        android:text="John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/postDescription_txt"
        app:layout_constraintEnd_toStartOf="@+id/postLikeButton"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/postTitle_txt2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.483" />

    <TextView
        android:id="@+id/postTitle_txt2"
        android:layout_width="67dp"
        android:layout_height="22dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="44dp"
        android:text="Title"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postTitle_txt3"
        android:layout_width="88dp"
        android:layout_height="20dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="80dp"
        android:text="description"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/postlist_user_profilephoto"
        android:layout_width="61dp"
        android:layout_height="51dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/postlist_user_firstname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="TextView"
        app:layout_constraintEnd_toStartOf="@+id/postDescription_txt"
        app:layout_constraintHorizontal_bias="0.089"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postlist_user_profilephoto" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/postLikeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        app:backgroundTint="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.649"
        app:layout_constraintStart_toEndOf="@+id/postDescription_txt"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.29"
        app:srcCompat="@drawable/ic_baseline_favorite_24" />

    <ImageView
        android:id="@+id/postlist_answered_image"
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="7dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postDescription_txt"
        app:layout_constraintTop_toBottomOf="@+id/postLikeButton"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@android:drawable/ic_dialog_email" />

    <ImageView
        android:id="@+id/postlist_seen_image"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_marginTop="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.097"
        app:layout_constraintStart_toEndOf="@+id/postlist_answered_image"
        app:layout_constraintTop_toBottomOf="@+id/postLikeButton"
        app:srcCompat="@android:drawable/ic_menu_view" />


</androidx.constraintlayout.widget.ConstraintLayout>
