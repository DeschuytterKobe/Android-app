<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/postRowLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="horizontal"
    android:padding="15dp"
    android:scrollbars="vertical"
    android:shape="rectangle">


    <TextView
        android:id="@+id/postDescription_txt"
        android:layout_width="147dp"
        android:layout_height="18dp"

        android:layout_marginStart="32dp"
        android:layout_marginTop="14dp"
        android:layout_marginBottom="10dp"
        android:text="Feeling good"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/postTitle_txt"
        app:layout_constraintTop_toBottomOf="@+id/postDate_txt"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/postDate_txt"
        android:layout_width="94dp"
        android:layout_height="26dp"

        android:layout_marginTop="2dp"
        android:text="Date"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/postTitle_txt"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.444"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.518" />

    <TextView
        android:id="@+id/postTitle_txt"
        android:layout_width="75dp"
        android:layout_height="32dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="10dp"
        android:text="John Doe"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/postLikeButton"
        android:layout_width="62dp"
        android:layout_height="39dp"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="4dp"
        android:text="Like"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.083"
        app:layout_constraintStart_toEndOf="@+id/postDescription_txt"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
